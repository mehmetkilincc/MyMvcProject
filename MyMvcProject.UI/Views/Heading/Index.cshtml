<div class="card">
    <div class="card-header">
        <h3 class="card-title">Heading Operations</h3>
        <a href="/Heading/AddHeading/" class="btn btn-dark btn-sm float-right">New Heading</a>
    </div>

    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">

                    </th>
                    <th style="width: 20%">
                        Heading Name
                    </th>
                    <th style="width: 10%">
                        Writer Name
                    </th>
                    <th style="width: 8%" class="text-center">
                        Writer Image
                    </th>

                    <th style="width: 8%" class="text-center">
                        Status
                    </th>
                    <th style="width: 8%" class="text-center">
                        Category
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            *
                        </td>
                        <td>
                            <a>
                                @item.HeadingName
                            </a>
                            <br />
                            <small>
                                @(((DateTime)item.HeadingDate).ToString("dd MMMM yyyy"))
                            </small>
                        </td>
                        <td>
                            <span>@item.Writer.WriterName @item.Writer.WriterSurname </span>
                        </td>
                        <td class="text-center">
                            <ul class="list-inline">
                                <li class="list-inline-item text-center">
                                    <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">                            
                                </li>
                            </ul>
                        </td>
                        <td class="text-center">
                            @switch (@item.HeadingStatus)
                            {
                                case true:<span class="badge badge-success">Active</span>
                                    break;
                                case false: <span class="badge badge-danger">Pasive</span>
                                    break;
                            }
                        </td>
                        <td class="project-state">
                            <span class="badge badge-success">@item.Category.CategoryName</span>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingId">
                                <i class="fas fa-folder">
                                </i>
                                Contents
                            </a>
                            <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingId">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                            @switch (@item.HeadingStatus)
                            {
                                case true:
                                    <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingId">
                                        <i class="fas fa-edit">
                                        </i>
                                        Make Pasive
                                    </a>
                                    break;

                                case false:
                                    <a class="btn btn-success btn-sm" href="/Heading/DeleteHeading/@item.HeadingId">
                                        <i class="fas fa-edit">
                                        </i>
                                        Make Aktive
                                    </a>
                                    break;
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
