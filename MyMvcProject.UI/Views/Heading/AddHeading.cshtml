@model MyMvcProject.Entity.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddHeading</h2>

@using (Html.BeginForm("AddHeading","Heading",FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Heading Name")
        @Html.TextBoxFor(x=>x.HeadingName,new {@class="form-control"})
        @Html.ValidationMessageFor(x=>x.HeadingName,"",new{@class="text-danger"})
        <br />
        @Html.Label("Category Name")
        @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.category,  new{@class="form-control"})
        <br />
        @Html.Label("Writer Name")
        @Html.DropDownListFor(x=>x.WriterId,(List<SelectListItem>)ViewBag.writer, new {@class="form-control"})
        @Html.ValidationMessageFor(x=>x.WriterId,"",new {@class="text-danger"})
        <br />
    </div>
}

