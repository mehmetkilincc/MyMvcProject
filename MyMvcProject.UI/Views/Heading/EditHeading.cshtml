@model MyMvcProject.Entity.Concrete.Heading

@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Heading</h2>

@using (Html.BeginForm("EditHeading","Heading",FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.HeadingId, new { @class = "form-control" })

        @Html.Label("Heading Name")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        <br />
        @Html.Label("Heading Date")
        @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control" })
        <br />
        @Html.Label("Heading Category")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })

        @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Update</button>
    </div>
}