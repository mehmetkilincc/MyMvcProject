@using MyMvcProject.Entity.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="card">
    <div class="card-header">
        <h3 class="card-title text-center">Admin Operations</h3>
        <a href="/Authorization/Create/" class="btn btn-dark btn-sm float-right">New Admin</a>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr class="text-center">
                    <th style="width: 1%"></th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Authority</th>
                    <th>Change Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <th>*</th>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Email</td>
                        <td>@item.UserName</td>
                        <td>@item.Role</td>
                        <td>
                            @switch (@item.Role)
                            {
                                case "Full Access":
                                    <a class="btn btn-warning btn-sm" href="/Authorization/Delete/@item.Id">
                                        <i class="fas fa-edit">
                                        </i>
                                        Change Role
                                    </a>
                                    break;

                                case "Limited Access":
                                    <a class="btn btn-warning btn-sm" href="/Authorization/Delete/@item.Id">
                                        <i class="fas fa-edit">
                                        </i>
                                        Change Role
                                    </a>
                                    break;
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




