@using MyMvcProject.Entity.Concrete
@model List<Heading>

@{
    ViewBag.Title = "Headings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Headings</h3>
        <a href="@Url.Action("Index", "AdminCategory")" class="btn btn-dark btn-sm float-right">Back to Categories</a>
    </div>

    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">

                    </th>
                    <th style="width: 25%">
                        Heading Name
                    </th>
                    <th style="width: 15%">
                        Writer Name
                    </th>
                    <th style="width: 15%" class="text-center">
                        Writer Image
                    </th>
                    <th style="width: 15%" class="text-center">
                        Status
                    </th>
                    <th style="width: 15%" class="text-center">
                        Category
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            *
                        </td>
                        <td>
                            <a>
                                @item.HeadingName
                            </a>
                            <br />
                            <small>
                                @(((DateTime)item.HeadingDate).ToString("dd MMMM yyyy"))
                            </small>
                        </td>
                        <td>
                            <span>@item.Writer.WriterName @item.Writer.WriterSurname </span>
                        </td>
                        <td class="text-center">
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                </li>
                            </ul>
                        </td>
                        <td class="text-center">
                            @switch (@item.HeadingStatus)
                            {
                                case true:<span class="badge badge-success">Active</span>
                                    break;
                                case false: <span class="badge badge-danger">Pasive</span>
                                    break;
                            }
                        </td>
                        <td class="project-state">
                            <span class="badge badge-success">@item.Category.CategoryName</span>
                        </td>   
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
