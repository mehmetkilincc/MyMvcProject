@model MyMvcProject.Entity.Concrete.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1> Add New Category</h1>
<br />

@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Category Name ")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" ,@placeholder ="Enter category name"})
        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
        <br /><br />
        @Html.Label("Category Description")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control", @placeholder = "Enter category desctiption"})
        @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
        <br /><br />
        <button class="btn btn-outline-dark btn-block">Add Category</button>
    </div>
}

