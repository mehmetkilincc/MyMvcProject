@model MyMvcProject.Entity.Concrete.Content

@{
    ViewBag.Title = "AddContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Add New Content</h2>

@using (Html.BeginForm("AddContent", "WriterPanelContent", FormMethod.Post))
{
    <div class="form-group">
        <input type="hidden" name="HeadingId" value="@ViewBag.Id"/>
        @Html.Label("Content")
        @Html.TextAreaFor(x => x.ContentText,5,40, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ContentText, "", new { @class = "text-danger" })
        <br />
        <button class="btn btn-outline-dark btn-block">Add Content</button>
    </div>
}



