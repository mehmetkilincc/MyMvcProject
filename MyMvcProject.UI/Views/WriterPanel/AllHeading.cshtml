<div class="card">
    <div class="card-header">
        <h3 class="card-title">Heading Operations</h3>
    </div>

    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 20%">
                        Heading Name
                    </th>
                    <th style="width: 12%">
                        Writer
                    </th>
                    <th style="width: 8%" class="text-center">
                        Category
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.HeadingId
                        </td>
                        <td>
                            <a>
                                @item.HeadingName
                            </a>
                            <br />
                            <small>
                                @(((DateTime)item.HeadingDate).ToString("dd MMMM yyyy"))
                            </small>
                        </td>
                        <td>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                </li>
                            </ul>
                        </td>
                        <td class="project-state">
                            <span class="badge badge-success">@item.Category.CategoryName</span>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-primary btn-sm" href="/Main/Headings/@item.HeadingId">
                                <i class="fas fa-folder">
                                </i>
                                Contents
                            </a>
                            <a class="btn btn-info btn-sm" href="/WriterPanelContent/AddContent/@item.HeadingId">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Add Content
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
