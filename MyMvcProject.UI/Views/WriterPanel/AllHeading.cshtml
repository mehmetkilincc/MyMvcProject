<div class="card">
    <div class="card-header">
        <h3 class="card-title">Heading Operations</h3>
    </div>

    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">

                    </th>
                    <th style="width: 25%">
                        Heading Name
                    </th>
                    <th style="width: 15%">
                        Writer Name
                    </th>
                    <th style="width: 10%" class="text-center">
                        Writer Image
                    </th>
                    <th style="width: 15%" class="text-center">
                        Category
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.HeadingStatus == true)
                    {
                        <tr>
                            <td>
                                *
                            </td>
                            <td>
                                <a>
                                    @item.HeadingName
                                </a>
                                <br />
                                <small>
                                    @(((DateTime)item.HeadingDate).ToString("dd MMMM yyyy"))
                                </small>
                            </td>
                            <td>
                                <span>@item.Writer.WriterName @item.Writer.WriterSurname </span>
                            </td>
                            <td class="text-center">
                                <ul class="list-inline">
                                    <li class="list-inline-item text-center">
                                        <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                    </li>
                                </ul>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-success">@item.Category.CategoryName</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="/WriterPanelContent/ContentByHeading/@item.HeadingId">
                                    <i class="fas fa-folder">
                                    </i>
                                    Contents
                                </a>
                                <a class="btn btn-info btn-sm" href="/WriterPanelContent/AddContent/@item.HeadingId">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Add Content
                                </a>
                            </td>
                        </tr>
}
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
